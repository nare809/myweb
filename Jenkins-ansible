pipeline{
    agent any
     tools {
        maven 'maven'
    }
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'git-login', url: 'https://github.com/nare809/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean sonar:sonar package"
                
            }
        }
        stage('Upload War To Nexus'){
            steps{
                  nexusArtifactUploader artifacts: [
                        [
                                artifactId: 'myweb', 
                                classifier: '', 
                                file: 'target/myweb-8.2.0.war', 
                                type: 'war'
                        ]
                    ], 
                        credentialsId: 'nexus-id', 
                        groupId: 'in.javahome', 
                        nexusUrl: '13.250.98.75:8081', 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: 'test-release', 
                        version: '8.2.0'  
              }
            }
        stage("Execute Ansible"){
            steps{
                ansiblePlaybook credentialsId: 'ssh-id', 
                disableHostKeyChecking: true, 
                installation: 'ansible2', 
                inventory: 'hosts', 
                playbook: 'deploy_tomcat.yml', 
                vaultTmpPath: ''
            }
           
        }
    }
}
